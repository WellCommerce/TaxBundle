<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="tax.manager" class="WellCommerce\Bundle\TaxBundle\Manager\TaxManager" parent="core.manager">
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="tax.factory"/>
        </service>
        
        <service id="tax.controller.admin" class="WellCommerce\Bundle\TaxBundle\Controller\Admin\TaxController">
            <argument type="service" id="tax.manager"/>
            <argument type="service" id="tax.form_builder.admin"/>
            <argument type="service" id="tax.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="tax.dataset.query_builder.admin" class="WellCommerce\Bundle\TaxBundle\DataSet\Admin\TaxDataSetQueryBuilder" public="false">
            <argument type="service" id="tax.repository"/>
        </service>

        <service id="tax.dataset.admin" class="WellCommerce\Bundle\TaxBundle\DataSet\Admin\TaxDataSet" parent="core.dataset">
            <argument type="service" id="tax.dataset.query_builder.admin"/>
        </service>

        <service id="tax.datagrid" class="WellCommerce\Bundle\TaxBundle\DataGrid\TaxDataGrid" parent="core.datagrid">
            <argument key="identifier">tax</argument>
            <argument type="service" id="tax.dataset.admin"/>
        </service>

        <service id="tax.form_builder.admin" class="WellCommerce\Bundle\TaxBundle\Form\Admin\TaxFormBuilder" parent="core.form_builder" />
    </services>
</container>
